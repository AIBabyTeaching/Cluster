
# 1. Create a fresh venv under your home
source /opt/bin/llamaenv/activate
cd ~
python3.11 -m venv llamaenv_local

# 2. Activate it
source ~/llamaenv_local/bin/activate

# 3. Install everything you need
# Add the requirements file provided in the course in your local envrionemnt
pip install -r requirements.txt

# 4. SFTP to your cluster
# Download the SFTP extension in VS Code
# Create the sftp.json inside .vscode like the following
{
  "name": "Mito-EntryPoint",
  "protocol": "sftp",
  "host": "10.1.8.4",
  "port": 22,
  "username": "metwalli_st@student.aast.edu",
  "password": "---------",
  "remotePath": "/home/metwalli_st@student.aast.edu/project",
  "uploadOnSave": false,
  "syncMode": "update",
  "watcher": {
    "files": "**/*",
    "autoUpload": false,
    "autoDelete": false
  }

# 5. Now check your files directory


